<!-- views/books.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Books</title>
</head>
<body>
    <% include ./partials/navigation %>
    <h1>Books</h1>
    <ul>
        <% if (books && books.length > 0) { %>
            <% books.forEach(book => { %>
                <li>
                    <a href="/book/<%= book.id %>">
                        <%= book.title %> by <%= book.author %> (Year: <%= book.year %>)
                    </a>
                </li>
            <% }); %>
        <% } else { %>
            <li>No books has been found</li>
        <% } %>
    </ul>
</body>
</html>
